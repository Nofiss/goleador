{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=GoleadorDb;User Id=goleador;Password=YOUR_DATABASE_PASSWORD;TrustServerCertificate=True;"
  },
  "Jwt": {
    "Key": "YOUR_SECURE_JWT_KEY_MIN_32_CHARS",
    "Issuer": "GoleadorApi",
    "Audience": "GoleadorClient"
  },
  "AzureAd": {
    "TenantId": "YOUR_TENANT_ID",
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET",
    "SenderEmail": "no-reply@yourcompany.com"
  },
  "Security": {
    "AllowedEmailDomains": [ "centrosoftware.com" ]
  },
  "Seed": {
    "AdminPassword": "YOUR_ADMIN_PASSWORD",
    "RefereePassword": "YOUR_REFEREE_PASSWORD"
  },
  "App": {
    "ClientUrl": "YOUR_CLIENT_URL"
  },
  "RateLimiting": {
    "AuthPolicy": {
      "PermitLimit": 5,
      "Window": "00:01:00",
      "QueueProcessingOrder": "OldestFirst",
      "QueueLimit": 2
    }
  }
}
