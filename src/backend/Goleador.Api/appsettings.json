{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq", "Serilog.Enrichers.Environment", "Serilog.Enrichers.Thread" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [ "http://localhost:5173", "https://your-production-domain.com" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=GoleadorDb;User Id=goleador;Password=YOUR_DATABASE_PASSWORD;TrustServerCertificate=False;"
  },
  "Jwt": {
    "Key": "YOUR_SECURE_JWT_KEY_MIN_32_CHARS",
    "Issuer": "GoleadorApi",
    "Audience": "GoleadorClient"
  },
  "AzureAd": {
    "TenantId": "YOUR_TENANT_ID",
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET",
    "SenderEmail": "no-reply@yourcompany.com"
  },
  "Security": {
    "AllowedEmailDomains": [ "centrosoftware.com" ]
  },
  "Seed": {
    "AdminPassword": "YOUR_ADMIN_PASSWORD",
    "RefereePassword": "YOUR_REFEREE_PASSWORD"
  },
  "App": {
    "ClientUrl": "YOUR_CLIENT_URL"
  },
  "RateLimiting": {
    "AuthPolicy": {
      "PermitLimit": 5,
      "Window": "00:01:00",
      "QueueProcessingOrder": "OldestFirst",
      "QueueLimit": 2
    }
  },
  "EfCore": {
    "ApplyMigrationsOnStartup": true
  }
}
