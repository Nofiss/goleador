# Top-most EditorConfig file
root = true

# ============================================================
# 1. Impostazioni Generali (Tutti i file)
# ============================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Formattazione specifica per file di configurazione e documentazione
[*.{json,yml,yaml,md}]
indent_size = 2

# ============================================================
# 2. Regole C# (.NET) - Analisi e Organizzazione
# ============================================================
[*.cs]
# Severità predefinita per le regole di stile Roslyn
dotnet_analyzer_diagnostic.category-Style.severity = warning

# Disabilita l'avviso "Expression value is never used" (IDE0058)
# Evita warning ridondanti quando si usano le Fluent API come EF Core o FluentValidation
dotnet_diagnostic.IDE0058.severity = none

# Organizzazione degli using
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false

# Preferenza per l'accesso ai membri (evita 'this.' se non necessario)
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# ============================================================
# 3. Formattazione e Layout (Stile Allman)
# ============================================================
# Posizionamento delle parentesi graffe: sempre a capo
csharp_new_line_before_open_brace = all

# Namespace nel formato C# 10+ (file-scoped) per ridurre l'indentazione
csharp_style_namespace_declarations = file_scoped:suggestion

# Graffe obbligatorie anche per blocchi a riga singola (if, for, while)
csharp_prefer_braces = true:suggestion

# Gestione degli operatori quando il codice va a capo (inizio riga)
dotnet_style_operator_placement_when_wrapping = beginning_of_line

# ============================================================
# 4. Stile del Linguaggio C# (Coding Style)
# ============================================================

# Utilizzo di 'var' (quando il tipo è evidente dal lato destro)
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_for_built_in_types = true:suggestion

# Funzionalità moderne (.NET Core / .NET 5+)
dotnet_style_coalesce_expression = true:suggestion
dotnet_style_null_propagation = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion
dotnet_style_object_initializer = true:suggestion
dotnet_style_prefer_auto_properties = true:silent
dotnet_style_conditional_delegate_call = true:suggestion
dotnet_style_prefer_inferred_tuple_names = true:suggestion
dotnet_style_prefer_tuple_swap = true:suggestion
csharp_style_prefer_switch_expression = true:suggestion
csharp_style_implicit_object_creation_when_type_is_apparent = true:suggestion

# Membri con corpo a espressione (=>)
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_constructors = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = true:silent
csharp_style_expression_bodied_accessors = true:silent
csharp_style_expression_bodied_lambdas = true:silent
csharp_style_expression_bodied_indexers = true:silent
csharp_style_expression_bodied_local_functions = false:silent
csharp_style_expression_bodied_operators = false:silent

# ============================================================
# 5. Modificatori di Accesso e Sicurezza
# ============================================================
# Forza l'ordine standard dei modificatori (es. public static invece di static public)
csharp_preferred_modifier_order = public,private,protected,internal,static,extern,new,virtual,abstract,sealed,readonly,unsafe,volatile,async:suggestion

# Richiede modificatore di accessibilità esplicito (es. private)
dotnet_style_require_accessibility_modifiers = omit_if_default:suggestion

# Suggerisce 'readonly' per i campi che non vengono riassegnati
dotnet_style_readonly_field = true:suggestion

# ============================================================
# 6. Convenzioni di Nomenclatura (Naming Conventions)
# ============================================================

# Interfacce: devono iniziare con 'I'
dotnet_naming_rule.interface_should_be_begins_with_i.severity = suggestion
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_begins_with_i.style = begins_with_i
dotnet_naming_symbols.interface.applicable_kinds = interface
dotnet_naming_style.begins_with_i.required_prefix = I
dotnet_naming_style.begins_with_i.capitalization = pascal_case

# Metodi Async: devono finire con 'Async' (solo se effettivamente marcati async)
dotnet_naming_rule.async_methods_end_in_async.severity = suggestion
dotnet_naming_rule.async_methods_end_in_async.symbols = any_async_methods
dotnet_naming_rule.async_methods_end_in_async.style = end_in_async
dotnet_naming_symbols.any_async_methods.applicable_kinds = method
dotnet_naming_symbols.any_async_methods.applicable_accessibilities = *
dotnet_naming_symbols.any_async_methods.required_modifiers = async
dotnet_naming_style.end_in_async.required_suffix = Async
dotnet_naming_style.end_in_async.capitalization = pascal_case

# Campi privati: devono iniziare con '_' e usare camelCase
dotnet_naming_rule.private_members_with_underscore.severity = suggestion
dotnet_naming_rule.private_members_with_underscore.symbols  = private_fields
dotnet_naming_rule.private_members_with_underscore.style    = prefix_underscore
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_style.prefix_underscore.capitalization = camel_case
dotnet_naming_style.prefix_underscore.required_prefix = _
